<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="app.com.warattil">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
            android:name=".app.MyApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher_app"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:fullBackupContent="true"
            android:supportsRtl="true"
            android:largeHeap="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="app.com.warattil.activities.SplashActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.SongListActivity"
                android:theme="@style/showNotificationBar"/>
        <activity
                android:name=".activities.SettingActivity"
                android:theme="@style/showNotificationBar"/>
        <activity
                android:name=".activities.MediaPlayerActivity"
                android:theme="@style/showNotificationBar"/>
    </application>

</manifest>