<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_30sdp">

        <TextView
                android:id="@+id/text_view_playing"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/colorCoralTree"
                android:textSize="@dimen/text_normal_size"
                android:text="@string/nowPlaying"/>
        <ImageView
               android:id="@+id/image_view_setting"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:contentDescription="@string/desc"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_setting"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher_app"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control"/>

            <TextView
                    android:id="@+id/text_view_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorCoralTree"
                    android:textSize="@dimen/text_normal_size"
                    android:layout_below="@+id/seek_bar"
                    android:layout_alignParentRight="true"
                    android:text="@string/duration"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_time"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="vertical">

            <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surah_title"
                    android:textSize="@dimen/text_header_size"
                    android:textColor="@color/colorWhite"/>

            <TextView
                    android:id="@+id/text_view_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="@color/colorCoralTree"
                    android:text="@string/nourallah"/>
            </LinearLayout>


            <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/image_view_reverse"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="@string/desc"
                    android:layout_toLeftOf="@+id/image_view_play_pause"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_reverse"/>

            <ImageView
                    android:id="@+id/image_view_play_pause"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="@string/desc"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_pause"/>
            <ImageView
                    android:id="@+id/image_view_forward"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="@string/desc"
                    android:layout_toRightOf="@+id/image_view_play_pause"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_forward"/>
            <ImageView
                    android:id="@+id/image_view_repeat"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="@string/desc"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_repeat"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
