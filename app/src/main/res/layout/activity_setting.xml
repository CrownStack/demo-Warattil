<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/relative_layout_setting_margin"
        android:layout_marginLeft="@dimen/relative_layout_setting_margin"
            android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_back"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow"/>

        <TextView
            android:id="@+id/text_view_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_header_size"
            android:textColor="@color/colorCoralTree"
            android:text="@string/settings"/>

        <ImageView
            android:id="@+id/image_view_next"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_next"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/linear_layout_setting_margin_left"
        android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_view_setting_margin_top"
        android:textColor="@color/colorCoralTree"
        android:textSize="@dimen/text_header_size"
        android:text="@string/language"/>

    <RadioGroup
        android:id="@+id/radio_group_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:buttonTint="@color/colorWhite"
            android:textSize="@dimen/text_normal_size"
            android:text="@string/english"/>
        <RadioButton
            android:id="@+id/radio_button_arabic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:buttonTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_normal_size"
            android:text="@string/arabic"/>

    </RadioGroup>

    <TextView
        android:id="@+id/text_view_reciter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_view_setting_margin_top"
        android:textColor="@color/colorCoralTree"
        android:textSize="@dimen/text_header_size"
        android:text="@string/reciter"/>

    <RadioGroup
        android:id="@+id/radio_group_reciter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_sheikh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
                android:buttonTint="@color/colorWhite"
            android:textSize="@dimen/text_normal_size"
            android:text="@string/sheikh"/>
        <RadioButton
            android:id="@+id/radio_button_nourallah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:buttonTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_normal_size"
            android:text="@string/nourallah"/>

    </RadioGroup>
    </LinearLayout>

</LinearLayout>
